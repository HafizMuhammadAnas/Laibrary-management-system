
   <div class="row d-flex justify-content-center align-items-center h-100 ">
      <div class="col-lg-6 mb-2 mb-lg-0">
         <div class= "card shadow card text-white bg-dark mb-3" >
           <div class= "card-header">
             <h3 class= "card-title text-center "> Sign up</h3>
           </div>
           <div class= "card-body">
             <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  method: :post, data: {turbo: false}) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>
                 <div class= "form-group">
                  <%= f.label :first_name , class:' mb-1' %>
                  <%= f.text_field :first_name  , class:" form-control form-control-lg "%>
                </div>

                <div class= "form-group">
                  <%= f.label :last_name , class:' mb-1' %>
                  <%= f.text_field :last_name  , class:" form-control form-control-lg "%>
                </div>
                   <div class= "form-group">
                  <%= f.label :username , class:' mb-1' %>
                  <%= f.text_field :username  , class:" form-control form-control-lg "%>
                </div>
                <div class= "form-group">
                  <%= f.label :email , class:' mb-1' %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:" form-control form-control-lg "%>
                </div>

                <div class="form-group">
                  <%= f.label :password  , class:' mb-1' %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class:" form-control form-control-lg " %>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation  , class:' mb-1'%>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:" form-control form-control-lg mb-2 " %>
                </div>
                  <div class= "form-group">
                  <%= f.label :education , class:' mb-1' %>
                  <%= f.text_field :education  , class:" form-control form-control-lg "%>
                </div>
                <div class= "form-group">
                  <%= f.label :profile_image %><br>
                  <%= f.file_field :profile_image  %>
                </div>


                <div class="actions" >
                  <%= f.submit "Sign up" , class: ' btn btn-lg btn-primary '%>
                </div>
              <% end %>

             <%= render "users/shared/links" %>
           </div>
         </div>
      </div>
   </div>
 </div>
</section>


